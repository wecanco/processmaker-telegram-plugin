{
    "name": "wecanco/processmaker-telegram-plugin",
    "description": "ProcessMaker plugin for Telegram notifications with inline actions",
    "type": "processmaker-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "WeCanCo",
            "email": "info@wecan-co.ir"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "processmaker/processmaker": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "ProcessMaker\\TelegramPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProcessMaker\\TelegramPlugin\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ProcessMaker\\TelegramPlugin\\PluginServiceProvider"
            ]
        },
        "processmaker": {
            "plugin-type": "standalone",
            "name": "Telegram Notifications",
            "description": "Send task notifications to Telegram with inline actions",
            "version": "1.0.0",
            "compatibility": {
                "processmaker": ">=4.0.0"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@php artisan package:discover --ansi"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}